<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context="com.dip.escape.WordPuzzleFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragment_first_puzzle_prompt"
        android:layout_alignParentTop="true"
        android:padding="20dp"
        android:text="@string/first_puzzle_text" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/equations"
        android:id="@+id/puzzle_image"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="20dp"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="200dp"
            android:hint="Answer"
            android:paddingRight="20dp"
            android:id="@+id/fragment_first_puzzle_answer_text"
            android:layout_height="wrap_content" />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/fragment_first_puzzle_submit_btn"
            android:text="Submit"
            android:textColor="#ffffff"/>
    </LinearLayout>

</RelativeLayout>
